<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_seconds"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_circle_on"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_up_hour1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_red_on"/>

        <ImageView
            android:id="@+id/image_up_hour2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_red_on"/>

        <ImageView
            android:id="@+id/image_up_hour3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_red_on"/>

        <ImageView
            android:id="@+id/image_up_hour4"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_red_on"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_bottom_hour1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_red_on"/>

        <ImageView
            android:id="@+id/image_bottom_hour2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_red_on"/>

        <ImageView
            android:id="@+id/image_bottom_hour3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_red_on"/>

        <ImageView
            android:id="@+id/image_bottom_hour4"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_red_on"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_up_minute1"
            android:layout_width="16dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_yellow_on"/>

        <ImageView
            android:id="@+id/image_up_minute2"
            android:layout_width="16dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_yellow_on"/>

        <ImageView
            android:id="@+id/image_up_minute3"
            android:layout_width="16dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_red_on"/>

        <ImageView
            android:id="@+id/image_up_minute4"
            android:layout_width="16dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_yellow_on"/>

        <ImageView
            android:id="@+id/image_up_minute5"
            android:layout_width="16dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_yellow_on"/>

        <ImageView
            android:id="@+id/image_up_minute6"
            android:layout_width="16dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_red_on"/>

        <ImageView
            android:id="@+id/image_up_minute7"
            android:layout_width="16dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_yellow_on"/>

        <ImageView
            android:id="@+id/image_up_minute8"
            android:layout_width="16dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_yellow_on"/>

        <ImageView
            android:id="@+id/image_up_minute9"
            android:layout_width="16dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_red_on"/>

        <ImageView
            android:id="@+id/image_up_minute10"
            android:layout_width="16dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_yellow_on"/>

        <ImageView
            android:id="@+id/image_up_minute11"
            android:layout_width="16dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_yellow_on"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_bottom_minute1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_yellow_on"/>

        <ImageView
            android:id="@+id/image_bottom_minute2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_yellow_on"/>

        <ImageView
            android:id="@+id/image_bottom_minute3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_yellow_on"/>

        <ImageView
            android:id="@+id/image_bottom_minute4"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@drawable/shape_rectangle_yellow_on"/>


    </LinearLayout>


</LinearLayout>
